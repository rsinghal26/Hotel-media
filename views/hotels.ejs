<% include partials/header.ejs %>
<div class="container">
    <header class="jumbotron">
        <div class="container  text-center">
            <h1>Welcome To Online Gallery</h1>
            <p>
                <a href="hotels/addNew">Add new hotel</a>            
            </p>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% hotels.forEach(function(hotel){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%= hotel.image %>" height="30%" width="100%">
                <figcaption class="figure-caption"><%= hotel.name %></figcaption>
                <a class="btn btn-primary" href="hotels/<%= hotel._id %>" role="button">More</a>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include partials/footer.ejs %>