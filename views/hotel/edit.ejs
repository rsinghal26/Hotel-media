<% include ../partials/header.ejs %>
<div class="container">
     <h1 class="text-center">Edit Post</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/hotels/<%=hotel._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[image]"  value="<%= hotel.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[description]"  value="<%= hotel.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="hotel/hotels">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>